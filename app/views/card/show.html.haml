.container
  = render "items/main-header"
  .mypage
    .mypage__main
      = render "modules/mypage-left"
    
      .credit-container
        .credit-container__header
          クレジットカード情報入力
          
        .card-form
          .card-form__number
            %label{class:'group--label', for: 'card_number'} 登録クレジットカード情報
            %br
            = "**** **** **** " + @default_card_information.last4
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
            = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
              %input{ type: "hidden", name: "card_id", value: "" }
              %button 削除する
  = render 'items/main-footer'
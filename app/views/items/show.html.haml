.item-detail
  .item-detail__top
    .item-detail__top__box
      .item-detail__top__box__item-name 
        = @item.name
      .item-detail__top__box__item-image
        = image_tag('cherry.png', class: 'image-main')
        %li.item-detail__top__box__item-image-sub
          = image_tag('cherry.png', class: 'image-sub') 
          = image_tag('fd401033.png', class: 'image-sub') 
          = image_tag('fd401266.png', class: 'image-sub') 
      .item-detail__top__box__item-price 
        .item-detail__top__box__item-price-box
          ¥
          = @item.selling_price
        .item-detail__top__box__item-price-detail
          (税込) 送料込み
      .item-detail__top__box__item-text
        .item-detail__top__box__item-text-box
          = simple_format @item.text
      .item-detail__table
        %table
          %tbody
            %tr
              %th 出品者
              %td
                = @item.user.nickname
            %tr
              %th カテゴリー
              %td
                = link_to "#", class:"category" do
                  = @category.name
                %br
                = link_to "#", class:"category" do
                  = @category.name
                %br
                = link_to "#", class:"category" do
                  = @category.name
            %tr
              %th 商品の状態
              %td
                = @item.status
            %tr
              %th 配送料の負担
              %td
                = @burden.name
            %tr
              %th 発送元の地域
              %td
                = link_to '#', class: "area" do
                  = @area.name
            %tr
              %th 発送日の目安
              %td
                = @days_to_ship.name
      - if user_signed_in? 
        - if current_user.id == @item.user_id 
          .item-detail__management
            = link_to "#", class:"edit" do
              = fa_icon "edit"
            = link_to "#", class:"destroy" do
              =fa_icon "trash"
        - else
          .item-detail__buy
            = link_to "購入画面に進む", buy_item_path, class:"btn", method: :get
      - else 
        .item-detail__buy
          = link_to "購入画面に進む", user_session_path, class:"btn", method: :get
      
      
      .item-detail__nav
      %li
        = link_to "< 前の商品", "#",class:"nav"
        = link_to "後ろの商品 >", "#",class:"nav-next"
        .item-detail__more-navi
          = link_to "その他をもっと見る", "#"

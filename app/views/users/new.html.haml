.container
  = render "items/main-header"
  .mypage
    .mypage__main
      = render "modules/mypage-left"
    
      .credit-container
        .credit-container__header
          クレジットカード情報入力
          
        .card-form
          .card-form__number
            %label{class:'group--label', for: 'card_number'} カード番号
            %span.input-required
              必須
            = text_field_tag "number", "", class: 'card-number--input', type: "text", id: 'card_number', maxlength: "16", placeholder: "半角数字のみ"
            .registration-error{type: "hidden", value: "必須項目です"}
            %ul.card-list
              %li.card-list--item{ style: "margin-left: 0;"}
                = image_tag "/visa.svg", width:"60", height:"30"
              %li.card-list--item
                = image_tag "/mastercard.svg", width:"60", height:"30"
              %li.card-list--item
                = image_tag "/jcb.svg", width:"60", height:"30"
              %li.card-list--item
                = image_tag "/amex.svg", width:"60", height:"30"
              %li.card-list--item
                = image_tag "/diners.svg", width:"60", height:"30"              

            .card-form__expire
              %label.group--label 有効期限
              %span.input-required
                必須
              .card-expire
                .card-expire__select-month
                  %select#exp_month{name: "exp_month", type: "text"}
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %i.fa.fa-angle-down
                  %span{class: "month"} 月
                .card-expire__select-year
                  %select#exp_year{name: "exp_year", type: "text"}
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %i.fa.fa-angle-down
                  %span{class:"year"} 年

            .card-form__security-code
              %label.roup--label{for: "cvc"} セキュリティーコード
              %span.input-required
                必須
              = text_field_tag "cvc", "", class: 'payment__security-code', type: "text", id: "cvc", maxlength: "4" ,placeholder: "カード背面４桁もしくは３桁の番号"
              .question-form
                %span.question-form__mark ?
                %span.question-form__text 
                  カード裏面の番号とは？
            #card_token
            = submit_tag "追加する", class: "card-form__add", id: "token_submit", type: 'button'

  -# = render "layouts/footer"